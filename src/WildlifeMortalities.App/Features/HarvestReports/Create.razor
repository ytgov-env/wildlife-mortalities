@page "/harvest-reports/create/{clientid:int}/{sealid:int}"
@using WildlifeMortalities.App.Data

<MudText Typo="Typo.h4" Class="mb-4">New Harvest Report</MudText>

<EditForm Model="HarvestReport" OnValidSubmit="Update">
    <MudGrid>
        <MudItem xs="12" sm="6">
            <MudPaper Elevation="2" Class="pa-4">
                <MudItem Class="d-flex">
                    <MudField Label="Client Id" DisableUnderLine="true">@ClientId</MudField>
                    <MudField Label="Seal #" DisableUnderLine="true">@SealId</MudField>
                </MudItem>
                <MudDivider Class="my-4"></MudDivider>
                <MudField Label="Report Date">2021-09-05</MudField>
                <MudDatePicker Label="Kill Date" Editable="true" />
                <MudField Label="Species">Mountain Sheep</MudField>
                <MudSelect Label="Sex" T="string">
                    <MudSelectItem Value='"Male"'>Male</MudSelectItem>
                    <MudSelectItem Value='"Female"'>Female</MudSelectItem>
                </MudSelect>

            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudPaper Elevation="2" Class="pa-4">
                <MudText Typo="Typo.h6">Location</MudText>
                <MudSelect Label="Subzone" T="string">
                    @foreach (var gma in GMAs)
                    {
                        <MudSelectItem Value="@gma">@gma</MudSelectItem>
                    }
                </MudSelect>
                <MudTextField T="string" Label="Latitude" Disabled="true"></MudTextField>
                <MudTextField T="string" Label="Longitude" Disabled="true"></MudTextField>

            </MudPaper>
        </MudItem>
        <MudItem xs="12" Class="d-flex justify-space-between py-2 px-3 mt-2">
            <MudButton ButtonType="ButtonType.Button" Variant="Variant.Filled" Color="Color.Secondary" Link="/harvest-reports">Cancel</MudButton>
            <MudButton ButtonType="ButtonType.Submit" Disabled="true" />
            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">Submit</MudButton>
        </MudItem>
    </MudGrid>

</EditForm>

